<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/exam_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prova"
        android:layout_marginTop="10sp"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/exam_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/exam_label"
        android:layout_marginTop="5sp"
        android:hint="Selecione uma prova"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/nota_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/exam_field"
        android:layout_marginTop="35sp"
        android:text="Data"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nota_field"
        android:hint="Digite a nota da prova"
        android:layout_marginTop="5sp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_below="@id/nota_label"/>



    <Button
        android:id="@+id/button_save_exam_grade"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:layout_marginTop="200sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nota_field" />

</LinearLayout>