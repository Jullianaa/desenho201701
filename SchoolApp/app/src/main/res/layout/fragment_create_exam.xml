<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.schoolapp.desenho.schoolapp.view.CreateExamFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/discipline_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disciplina"
        android:textSize="12sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/discipline_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Selecione uma disciplina"
        android:layout_marginTop="10sp"
        android:textAlignment="center"
        android:layout_below="@id/discipline_label"/>

    <TextView
        android:id="@+id/date_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@id/discipline_field"/>

    <TextView
        android:id="@+id/date_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date_button"
        android:textSize="18sp"
        android:layout_marginTop="10sp"
        android:textAlignment="center"
        android:layout_below="@id/date_label"/>

    <TextView
        android:id="@+id/title_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Título da Prova"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        android:textAlignment="center"
        android:layout_below="@id/date_field"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_field"
        android:hint="Digite o título da prova"
        android:layout_marginTop="10sp"
        android:textAlignment="center"
        android:layout_below="@id/title_label"/>

    <Button
        android:id="@+id/button_save_exam"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:layout_marginTop="270sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title_field" />

</RelativeLayout>
